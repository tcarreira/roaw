{{ define "_flash.html" -}}
<div class="row" id="flash">
  <div class="col-md-12">
    {{ range $k, $messages := .flash }}
      {{ range $messages }}
        <div class="alert alert-{{ $k }}" role="alert">
          {{ . }}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{ end }}
    {{ end }}
  </div>
</div>
{{- end }}
